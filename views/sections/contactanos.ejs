<div class="container-contactos">

  <div class="right">
      <div class="titulo">
        <h3>REDES SOCIALES</h3>
        <br>
      </div>
      <div class="row">
          <div class="col-25">
              <img src="../img/inicio.gif " width="700px" height="400px">
            </div>
      </div>
  </div>


  <form class="container-pagos">
  <div class="titulo">
  <h3>INFORMACION DEL CONTACTO</h3>
  <br>
  </div>
  <div class="form-group">
    <input type="text" class="form-control" placeholder=" " id="name" name="nombre" required >
    <label for="name" class="form-label">Nombre</label>
  </div>
  
  <div class="form-group">
    <input type="email" class="form-control" placeholder=" " id="email" name ="correo" required >
    <label for="email" class="form-label">Correo</label>
  </div>
  
  <div class="form-group">
      <input type="number" class="form-control" placeholder=" " id="number" name="numero" required >
      <label for="number" class="form-label">Numero</label>
    </div>

  <div class="form-group">
    <textarea id="message" class="form-control" placeholder=" "  style="height:200px" required name="mensaje"></textarea>
    <label for="message" id="message" class="form-label">Mensaje</label>
  </div>
  <button class="btname" onclick="contacto()">Enviar</button>
