<div class="container-contactos">

  <div class="right">
      <div class="titulo">
        <h3>REDES SOCIALES</h3>
        <br>
      </div>
      <div class="row">
          <div class="col-25">
              <img src="../img/inicio.gif " width="700px" height="400px">
            </div>
      </div>
  </div>


  <form class="container-pagos" method="POST">
  <div class="titulo">
  <h3>INFORMACION DEL CONTACTO</h3>
  <br>
  </div>
  <div class="form-group">
    <input type="text" class="form-control" placeholder=" " 
    id="name" name="name" >
    <label for="name" class="form-label">Your Name</label>
  </div>
  
  <div class="form-group">
    <input type="email" class="form-control" placeholder=" " 
    id="email" name="email">
    <label for="email" class="form-label">Your Email</label>
  </div>
  
  <div class="form-group">
      <input type="number" class="form-control" placeholder=" " 
      id="number" name="number">
      <label for="number" class="form-label">Your Number</label>
    </div>

  <div class="form-group">
    <textarea id="message" class="form-control" placeholder=" " 
    id="message" name="message" style="height:200px"></textarea>
    <label for="message" id="message" class="form-label">Your Message</label>
  </div>
