
<main id="contenedor-productos">
  <% results.forEach((inventario)=>{ %>
      <div class="producto">
      <img class="card-img-top" src="img/<%=inventario.imagen%>" alt="Card image cap">
      <h3><%= inventario.nombre %></h3>
      <p><%= inventario.descripcion %></p>
      <p class ="precioProducto">Precio:$<%=inventario.precio %></p>
      <a href="#" data-id="<%=inventario.id_producto%>"data-name="<%=inventario.nombre%>" data-price="<%=inventario.precio%>" class="add-to-cart">Agregar</a>
    </div>
      <% }) %>
    </main>
      
    <div class="modal-contenedor">
      <div class="modal-carrito">
          <h3>Carrito</h3>
          <button id="carritoCerrar" data-dismiss="modal"><i class="fas fa-times-circle"></i></button>
          <table class="show-cart table">
          </table>
          <p class="precioProducto">Precio total:$<span class="total-cart"></span></p>
            <button class="clear-cart">Vaciar carrito</button>
            <form action="pagos">
                <button  class="boton-pagar">Ordenar ahora</button>
            </form>
      </div>
  </div>