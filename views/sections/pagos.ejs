  </div>
  
  <div class="form-group">
    <input type="email" class="form-control" placeholder=" " 
    id="email" name="email">
    <label for="email" class="form-label">Your Email</label>
  </div>

  <div class="form-group">
    <input type="text" class="form-control" placeholder=" " 
    id="adress" name="adress" >
    <label for="adress" class="form-label">Your Adress</label>
  </div>

  <div class="form-group">
    <input type="text" class="form-control" placeholder=" " 
    id="city" name="city" >
    <label for="city" class="form-label">Your City</label>
  </div>

  <div class="form-group">
    <input type="text" class="form-control" placeholder=" " 
    id="region" name="region" >
    <label for="region" class="form-label">Your Region</label>
  </div>

  <div class="form-group">
    <input type="checkbox" id="gift" value="">
    <label for="gift">Enviar como regalo</label><br>
  </div>
  <input type="submit" id="boton-enviar"  value="Siguiente" onclick="hizoClick()">
  </form>

