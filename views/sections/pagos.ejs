<div class="modal-contenedor">
  <div class="modal-carrito">
      <h3>Carrito</h3>
      <button id="carritoCerrar" data-dismiss="modal"><i class="fas fa-times-circle"></i></button>
      <table class="show-cart table">
      </table>
      <p class="precioProducto">Precio total:$<span class="total-cart"></span></p>
        <button class="clear-cart">Vaciar carrito</button>
        <form action="pagos">
            <button  class="boton-pagar">Ordenar ahora</button>
        </form>
  </div>
</div>

<div class="container-contactos">
  <form class="container-pagos" >
  <div class="titulo">
  <h3>INFORMACION DEL CONTACTO</h3>
  <br>
  </div>
  <div class="form-group">
    <input type="text" class="form-control" placeholder=" " 
    id="name" name="nombre" required>
    <label for="name" class="form-label">Nombre</label>
  </div>

  <div class="form-group">
    <input type="text" class="form-control" placeholder=" " 
    id="apellido" name="apellido" required>
    <label for="apellido" class="form-label">Apellido</label>
  </div>
  
  <div class="form-group">
    <input type="email" class="form-control" placeholder=" " 
    id="email" name="email" required>
    <label for="email" class="form-label">Email</label>
  </div>
  
  <div class="form-group">
      <input type="number" class="form-control" placeholder=" " 
      id="numero1" name="numero1" required>
      <label for="numero1" class="form-label">Numbero Personal</label>
    </div>

    <div class="form-group">
      <input type="number" class="form-control" placeholder=" " 
      id="numero2" name="numero2">
      <label for="numero2" class="form-label">Number Secundario</label>
    </div>

  <div class="form-group">
    <textarea id="message" class="form-control" placeholder=" " 
    id="direccion" name="direccion" style="height:200px"></textarea>
    <label for="direccion" id="message" class="form-label">Direccion</label>
  </div>

  <div class="form-group">
    <input type="checkbox" id="gift" value="3"><label for="gift">Enviar como regalo</label><br>
  </div>
  <div class="form-group">
  <button class="btname" type="submit" onclick="obtenerdatos()">Hacer pedido</button>
  </div>
  </form>

  <div class="right-pago">
    <div class="titulo">
      <h3>RESUMEN DEL PEDIDO</h3>
      </div>
      <br>
      <div id="order">  </div>
      <br>
      <br>
      <br>
      <script src="https://www.paypal.com/sdk/js?client-id=<%= PAYPAL_API_CLIENT %>&currency=USD&disable-funding=card,credit"></script>
<script defer src="js/paymentButton.js"></script>
<script src="js/control.js"></script>

<div id="paypal-button"></div> 
  </div>
      

</div>

